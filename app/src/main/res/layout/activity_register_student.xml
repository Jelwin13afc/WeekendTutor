<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registerStudent"
    android:background="@drawable/background_gradient"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--TextView
            android:id="@+id/pagename"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Tutor Registration"
            android:textSize="30dp"
            /-->
        <TextView
            android:id="@+id/nameview"
            android:textColor="@color/black"
            android:layout_below="@id/pagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="22dp"
            android:text="Name"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=""
            android:layout_below="@id/nameview"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/emailview"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Email"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint=""
            android:layout_below="@id/emailview"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/passview"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_below="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/passview"
            android:hint=""
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/cpassview"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/cpassview"
            android:hint=""
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/stuDp"
            android:layout_marginRight="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/addprofilepic"
            android:layout_alignRight="@id/name"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pagename"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/qfview"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_below="@id/confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Qualification"/>
        <EditText
            android:id="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=""
            android:layout_below="@id/qfview"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/cityview"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_below="@id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="City (where you would attend classes)"/>
        <EditText
            android:id="@+id/city"
            android:layout_below="@id/cityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=""
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/registerbutton"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"

            android:layout_below="@id/city"
            android:background="@drawable/oval"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"

            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</ScrollView>
